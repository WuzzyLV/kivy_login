#:kivy 1.0
#:import images_path kivymd.images_path

<NoteWidget>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(40)
    padding: [dp(10), dp(10), dp(10), dp(10)]
    spacing: dp(10)

    Image:
        id: note_image
        size_hint_x: 0.2
        allow_stretch: True
        keep_ratio: True
        opacity: 0.8
        padding: [0, 0, 0, dp(20)]
    Label:
        id: note_label
        text: root.note_text
        color: root.hex_to_rgb(root.note_color)
        size_hint_x: 0.8
        valign: 'middle'
        halign: 'left'
        text_size: self.width, None



    # Edit Button
    Button:
        text: 'Edit'
        size_hint_x: 0.2
        on_press: root.on_edit()
        background_normal: ''
        background_color: 0.2, 0.6, 1, 1

    # Delete Button
    Button:
        text: 'Delete'
        size_hint_x: 0.2
        on_press: root.on_delete()
        background_normal: ''
        background_color: 1, 0.2, 0.2, 1
