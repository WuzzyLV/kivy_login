#:kivy 1.0

<UserSettingsScreen>:
    canvas.before:
        Color:
            rgba: (0.85, 0.95, 1, 1)  # Light blue
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)
            size_hint: None, None
            size: dp(400), dp(250)


            Label:
                text: "Register" if root.register_mode else "User Settings"
                font_size: '24sp'
                size_hint_y: None
                height: dp(40)
                color: 0.2, 0.4, 0.8, 1


            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(40)

                Label:
                    text: "Username:"
                    size_hint_x: 0.3
                    halign: 'right'
                    color: 0.2, 0.4, 0.8, 1

                RoundedTextInput:
                    id: username_input
                    text: ''
                    multiline: False
                    size_hint_x: 0.7

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(40)

                Label:
                    text: "Password:"
                    size_hint_x: 0.3
                    halign: 'right'
                    color: 0.2, 0.4, 0.8, 1


                RoundedTextInput:
                    id: password_input
                    text: ''
                    hint_text: "Enter password to change"
                    multiline: False
                    password: True
                    size_hint_x: 0.7

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)

                RoundedButton:
                    text: "Register" if root.register_mode else "Save"
                    on_release: root.save_settings()

                RoundedButton:
                    text: "Cancel"
                    on_release: root.go_back()
                    


